<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" app:cardCornerRadius="5dp">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="1dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:textSize="16sp" android:textColor="@color/color_blue" android:id="@+id/txt_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="234567890" android:layout_weight="1" android:fontFamily="@font/roboto"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_black" android:gravity="end" android:id="@+id/amt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs.00" android:layout_weight="1" android:fontFamily="@font/roboto"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/gray3" android:id="@+id/date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="dd mm yyyy hh: mm" android:fontFamily="@font/roboto"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
