<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/mainHome" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/pure_black" android:id="@+id/current_Date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Sunday ,3 july 2021"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/lineNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txtNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW RETURNS"
                        android:textStyle="normal"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/countNewOrder"
                        android:layout_width="16dp"
                        android:visibility="invisible"
                        android:layout_height="16dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/red"
                        android:text="00"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_white"
                        android:textSize="8dp"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/viewNewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/color_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linePrepare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txtPrepare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ONGOING"
                        android:textStyle="normal"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/pure_black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/countPrepare"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="invisible"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/red"
                        android:text="00"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_white"
                        android:textSize="8dp"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/viewPrepare"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:background="@color/color_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lineComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txtComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SETTLED"
                        android:textStyle="normal"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/pure_black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/countComplete"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="invisible"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/red"
                        android:text="00"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_white"
                        android:textSize="8dp"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/viewComplete"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:background="@color/color_blue"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9FCFD"
            android:id="@+id/frame"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:rotation="90"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:rotation="270"/>
    </LinearLayout>
</RelativeLayout>
