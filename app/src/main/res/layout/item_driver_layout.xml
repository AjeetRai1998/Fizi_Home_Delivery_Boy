<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" app:cardBackgroundColor="@color/color_white" app:cardCornerRadius="0dp" app:cardElevation="6dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/image" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/person" app:civ_border_color="@color/pure_black" app:civ_border_width="1dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="1">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/pure_black" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Abhishek (Delivering 1 Order)" android:fontFamily="@font/roboto"/>
            <TextView android:textSize="13dp" android:textColor="@color/gray5" android:id="@+id/orders" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs. 200 /-" android:fontFamily="@font/roboto"/>
            <TextView android:textSize="13dp" android:textColor="@color/pure_black" android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12 KM Away" android:fontFamily="@font/roboto"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/gray0" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="80dp"/>
</androidx.cardview.widget.CardView>
