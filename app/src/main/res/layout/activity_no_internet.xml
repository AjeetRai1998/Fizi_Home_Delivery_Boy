<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#ffed8e" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="250dp" android:layout_height="100dp" android:layout_marginTop="10dp" android:src="@drawable/logo" android:layout_centerHorizontal="true"/>
    <pl.droidsonroids.gif.GifImageView android:id="@+id/giffy" android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/no_internet_gif" android:layout_centerInParent="true"/>
    <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="#5b3909" android:id="@+id/can_we" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="No Connection" android:layout_below="@+id/giffy" android:layout_centerHorizontal="true" android:letterSpacing="0.1"/>
    <TextView android:textSize="16sp" android:textColor="#5b3909" android:gravity="center" android:id="@+id/msg" android:paddingLeft="35dp" android:paddingRight="35dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="No internet connection found.check your connection or try again." android:layout_below="@+id/can_we" android:fontFamily="@font/roboto" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:letterSpacing="0.1"/>
    <com.google.android.material.button.MaterialButton android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:paddingLeft="25dp" android:paddingTop="10dp" android:paddingRight="25dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="55dp" android:text="try again" android:shadowRadius="5" android:layout_below="@+id/msg" android:layout_centerHorizontal="true" android:onClick="retry" android:textAllCaps="true"/>
</RelativeLayout>
